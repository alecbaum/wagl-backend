# Environment Configuration Example
# Copy this file to .env.local for development or .env.production for production
# Fill in the actual values for your environment

ASPNETCORE_ENVIRONMENT=Development

# Database Configuration
DATABASE_HOST=your-database-host
DATABASE_PORT=5432
DATABASE_NAME=your-database-name
DATABASE_USER=your-database-user
DATABASE_PASSWORD=your-database-password
DATABASE_SSL_MODE=require

# Redis Configuration
REDIS_CONNECTION_STRING=your-redis-connection-string

# JWT Configuration
JWT_SECRET_KEY=your-256-bit-secret-key-minimum-32-characters-long
JWT_ISSUER=your-api-issuer
JWT_AUDIENCE=your-api-audience
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# API Configuration
API_BASE_URL=https://your-api-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Rate Limiting Configuration
RATE_LIMIT_TIER1=100
RATE_LIMIT_TIER2=500
RATE_LIMIT_TIER3=2000
RATE_LIMIT_PROVIDER=10000

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=false
ENABLE_SENSITIVE_DATA_LOGGING=false

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true